{
    "state": {
        "seed": 1234,
        "mode": "all"
    },
    "model": {
        "weights_path": "../weights/weights.pth",
        "save_path": "../weights/weights.pth",
        "in_channels": 3,
        "num_classes": 1,
        "dropout": 0.1
    },
    "trainer": {
        "use_pretrained": false,
        "train_val_split": [
            0.8,
            0.2
        ],
        "epochs": 30,
        "batch_size": 8,
        "lr": 1e-4
    },
    "predictor": {
        "threshold": 0.5,
        "alpha": 0.4,
        "highlight_color": [
            0,
            0,
            255
        ]
    },
    "data": {
        "img_path": "../data/Images",
        "mask_path": "../data/Labels",
        "predict_src": "../data/InferenceImgs",
        "predict_dst": "../data/InferencePreds",
        "train_resize": [
            256,
            256
        ],
        "predict_resize": [
            1024,
            1024
        ]
    }
}
